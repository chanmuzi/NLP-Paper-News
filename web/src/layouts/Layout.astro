---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "chanmuzi의 AI 논문 & 뉴스 큐레이션. NLP, ML 분야의 최신 논문과 뉴스를 매주 정리합니다." } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#D97757" />
    <link rel="icon" type="image/png" href={`${base}logo.png`} />
    <link rel="apple-touch-icon" href={`${base}logo.png`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen font-sans antialiased bg-anthro-bg dark:bg-anthro-dark text-gray-900 dark:text-gray-100 transition-colors duration-200">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 border-b border-gray-200/80 dark:border-gray-800/50 bg-anthro-bg/85 dark:bg-anthro-dark/85 backdrop-blur-xl">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="flex justify-between h-14 items-center">
          <a href={base} class="flex items-center gap-2.5 group">
            <img src={`${base}logo.png`} alt="chanmuzi" class="w-8 h-8 rounded-lg object-cover shadow-sm group-hover:shadow-md group-hover:scale-105 transition-all" />
            <div class="flex flex-col leading-none">
              <span class="font-bold text-[15px] text-gray-800 dark:text-gray-100">
                chanmuzi
              </span>
              <span class="text-[10px] text-gray-400 dark:text-gray-500 tracking-wide">
                AI Paper & News
              </span>
            </div>
          </a>
          <div class="flex items-center gap-1">
            <a
              href={`${base}bookmarks/`}
              class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-all font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/></svg>
              <span class="hidden sm:inline">북마크</span>
            </a>
            <a
              href={`${base}search/`}
              class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-all font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
              <span class="hidden sm:inline">검색</span>
            </a>
            <a
              href={`${base}admin/`}
              class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-all font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
              <span class="hidden sm:inline">추가</span>
            </a>
            <button
              id="theme-toggle"
              class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all text-gray-500 dark:text-gray-400"
              aria-label="Toggle theme"
            >
              <svg class="w-5 h-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/></svg>
              <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 sm:px-6 py-8">
      <slot />
    </main>

    <footer class="border-t border-gray-200 dark:border-gray-800 mt-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-10">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <div class="flex items-center gap-2.5">
            <img src={`${base}logo.png`} alt="chanmuzi" class="w-6 h-6 rounded-md object-cover" />
            <span class="text-sm font-semibold text-gray-500 dark:text-gray-400">chanmuzi AI Paper & News</span>
          </div>
          <div class="flex items-center gap-4 text-xs text-gray-400 dark:text-gray-500">
            <a href="https://github.com/chanmuzi" class="hover:text-claude-500 transition-colors">GitHub</a>
            <span class="text-gray-300 dark:text-gray-600">|</span>
            <span>Curated with care</span>
          </div>
        </div>
      </div>
    </footer>

    <script is:inline>
      // Dark mode toggle - check preference
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');

      document.getElementById('theme-toggle')?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
</style>
